<ul class="postlist">
{% for item in collections.blog  %}
<li class="postlist">
    <h2 class="postlist">
        <a href="{{item.url}}">{{item.data.title | capitalize }}</a>
    </h2>
    <div class="date">
        <time>{{item.date | postDate}}</time>
    </div>
    <div>
        {{item.data.blurb}}
    </div>
</li>
{% endfor %}
</ul>